/* plugin/components/choose.wxss */

.head-form{
  width:100%;
  height: 120rpx;
}
.head-view{
  width:750rpx;
  height:120rpx;
  line-height:120rpx;
  white-space:nowrap;
  display:flex;
}
.head-item{
  
  width:187.5rpx;
  height:120rpx;
  text-align:center;
  display:inline-block;

}
.head-item::after{
  border: none;
  padding: 0rpx;
  border-radius: 0;
}
.head-item:active{
  background-color: #dedede;
}

.item-image{
  padding: 10rpx;
  height: 50rpx;
  text-align: center;
}
.item-text{
  /* height: 50rpx; */
  text-align: center;
  font-size: 28rpx;
  
}   
.item-image>image{
  width: 50rpx;
  height: 50rpx;
}

button::after{
  border:none;
  background-color:transparent;
}
button {
padding: 0rpx;
margin:0rpx;
text-align:center;
text-decoration:none;
border-radius:0px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#000;
background-color:transparent;
}
.itemK view{
  text-align: center;
}

